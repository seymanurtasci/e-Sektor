@using MVCUI.Models
@model List<TasksOfferVM>

@{
	ViewBag.Title = "TEKLİFLER";
}

<h2>Seçili İlan Teklifleri</h2>


<table class="table">
	<tr>
		<th>
			@Html.DisplayName("Teklif No")
		</th>
		<th>
			@Html.DisplayName("Teklif Veren Firma")
		</th>
		<th>
			@Html.DisplayName("Teklif Açıklaması")
		</th>
		<th>
			@Html.DisplayName("Teklif Miktarı")
		</th>

		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.OfferId)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CompanyName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Detail)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Fee)
			</td>

			<td>
				@Html.ActionLink("Detay Gör", "GetOfferDetails", new { id = item.OfferId })
			</td>
		</tr>
	}

</table>
