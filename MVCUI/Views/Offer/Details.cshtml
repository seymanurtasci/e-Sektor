@model MVCUI.Models.OfferOfferDetailVM

@{
    ViewBag.Title = "Detaylar";
}

<h2>Detaylar</h2>

@Html.LabelFor(model => model.Offer.Fee, htmlAttributes: new { @class = "control-label text-left col-sm-1" })
<strong>@Html.DisplayFor(model => model.Offer.Fee)</strong>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OfferDetails[0].Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferDetails[0].Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferDetails[0].QuantityUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferDetails[0].UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferDetails[0].Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OfferDetails)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
<a class="btn btn-primary">Düzenle</a>
<a class="btn btn-danger">Sil</a>
